{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Farpy",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.fp",
					"match": "\\b(if|while|for|new|mut|include|fn|return|break|continue)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.fp",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.fp",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.fp",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.fp",
							"match": "\\\\."
						}
					]
				}
			]
		}
	},
	"scopeName": "source.farpy",
	"tabSize": 4
}
